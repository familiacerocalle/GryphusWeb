<div class="card">
  <div class="container-fliud">
    <div class="wrapper row">
      <div class="preview col-md-6">

        <div class="preview-pic tab-content">
          <% @course.attachments.each_with_index do |attachment, index| %>
            <div class="tab-pane <%= index == 0 ? 'active' : '' %>" id="pic-<%=attachment.id%>">
              <% if ['PNG', 'png', 'jpg', 'JPG', 'jepg', 'JEPG'].include?(attachment.file.url.split('.').last) %>
                <%= image_tag(attachment.file.url) %>
              <% elsif ['mp4'].include?(attachment.file.url.split('.').last) %>
                <%= video_tag attachment.file.url, size: '500x500', controls: true %>
              <% end %>
            </div>
          <% end %>
        </div>

        <ul class="preview-thumbnail nav nav-tabs">
          <% @course.attachments.each_with_index do |attachment, index| %>
            <li class="<%= index == 0 ? 'active' : '' %>">
              <a data-target="#pic-<%= attachment.id %>" data-toggle="tab">
                <% if ['PNG', 'png', 'jpg', 'JPG', 'jepg', 'JEPG'].include?(attachment.file.url.split('.').last) %>
                  <%= image_tag(attachment.file.url) %>
                <% elsif ['mp4'].include?(attachment.file.url.split('.').last) %>
                  Video
                <% end %>
              </a>
            </li>
          <% end %>
        </ul>

      </div>
      <div class="details col-md-6">
        <h6 class="sizes"><%= t(:name) %>: <%= @course.nombre %></h6>
        <h6 class="sizes"><%= t(:content) %>: <%= @course.contenido %></h6>
        <h6 class="sizes"><%= t(:points) %>: <%= @course.puntos %></h6>
      </div>
    </div>
  </div>
  <%= link_to t(:back), root_path %>
</div>