<div class="container">
  <div class="login-form">
    <div class="main-div">
      <div class="panel">
        <h1><%= t(:login) %></h1>
      </div>
      </br>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: 'Login' }) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t(:email_address), class: "form-control", id: "inputEmail" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "inputPassword", placeholder: t(:password) %>
        </div>
        <div class="forgot">
          <%= link_to t(:forgot_your_password), new_password_path(resource_name) %>
        </div>
        <button type="submit" class="btn btn-primary"><%= t(:login) %></button>
      <% end %>
      </br>
      <%= link_to t(:signup), new_registration_path(resource_name) %><br />
    </div>
  </div>
</div>
