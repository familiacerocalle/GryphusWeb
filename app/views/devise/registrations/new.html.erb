<div class="container">
  <div class="login-form">
    <div class="main-div">
      <div class="panel">
        <h1><%= t(:signup) %></h1>
      </div>
      </br>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: 'Login' }) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t(:email_address), class: "form-control", id: "inputEmail" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "inputPassword", placeholder: t(:password) %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", id: "inputPassword", placeholder: t(:password_confirmation) %>
        </div>
        <button type="submit" class="btn btn-primary"><%= t(:sign_up) %></button>
      <% end %>
      </br>
      <%= link_to t(:login), new_session_path(resource_name) %><br />
    </div>
  </div>
</div>
