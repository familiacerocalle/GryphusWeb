<div class="container">
  <div class="login-form">
    <div class="main-div">
      <div class="panel">
        <h1><%= t(:edit_user) %></h1>
      </div>
      </br>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: 'Login', method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.text_field :nombre, placeholder: t(:name), class: "form-control", id: "inputEmail" %>
        </div>
        <div class="form-group">
          <%= f.text_field :primerApellido, placeholder: t(:surname), class: "form-control", id: "inputEmail" %>
        </div>
        <div class="form-group">
          <%= f.text_field :segundoApellido, placeholder: t(:second_surname), class: "form-control", id: "inputEmail" %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, autocomplete: "email", placeholder: t(:email_address), class: "form-control", id: "inputEmail" %>
        </div>
        <div class="form-group">
          <%= f.select :locale, options_for_select(['en', 'es']), {}, { class: "form-control" } %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "inputPassword", placeholder: t(:password) %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", id: "inputPassword", placeholder: t(:password_confirmation) %>
        </div>
        <div class="form-group">
          <%= f.password_field :current_password, autocomplete: "off", class: "form-control", id: "inputPassword", placeholder: t(:curr_password) %>
        </div>
        <button type="submit" class="btn btn-primary"><%= t(:update) %></button>
      <% end %>
      </br>
      <%= link_to t(:back), :back %>
    </div>
  </div>
</div>
