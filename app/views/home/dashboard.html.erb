            <tr>
              <th scope="row"><%= challenge.id %></th>
              <td><%= link_to challenge.descripcion, challenge_path(challenge) %></td>
              <td><%= link_to t(:enroll), {:controller => "challenge_users", :action => "enroll", :challengeid => challenge.id, :userid => current_user.id} %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  </br>
  </br>
</div>

