<!DOCTYPE html>
<html>
  <head>
    <title>Prototipo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  </head>

  <body>
    <% if notice || alert %>
      <div class="alert <%= notice ? 'alert-success' : 'alert-danger'%> alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <% if notice %>
          <strong>Success!</strong> <%= notice %>
        <% end %>
        <% if alert %>
          <strong>Error!</strong> <%= alert %>
        <% end %>
      </div>
    <% end %>
    <%= render partial: 'layouts/header' if (current_user || (!current_user && request.path != '/')) %>
    <div class='container'>
      <%= yield %>
    </div>
  </body>
</html>
